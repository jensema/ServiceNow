        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	// Verify that the week starts on the required day of the week based on the user's time sheet policy.
	var userId = current.user ? current.user : gs.getUserID();

	var timeSheetPolicy = TimeSheetPolicy.getFromUser(userId);
	var gdt = GlideDateTime(current.week_starts_on);
	var offset = gdt.getTZOffset();
	var selectedDayOfWeek = gdt.getDayOfWeekUTC();
	
	if(timeSheetPolicy.weekStartsOn() != selectedDayOfWeek) {
		gs.addInfoMessage("The assigned timesheet policy '" + timeSheetPolicy.name() + "' requires that the week starts on " + timeSheetPolicy.weekStartsOnDisplayValue() + '. The time sheet has not been saved.');
		current.setAbortAction(true);
	}
	
})(current, previous);]]></script>
